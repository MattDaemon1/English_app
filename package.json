        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "better-sqlite3": "^11.10.0",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
