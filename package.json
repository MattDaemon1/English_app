        "eslint-plugin-react-refresh": "^0.4.3",
        "happy-dom": "^17.6.1",
        "jest": "^30.0.4",
        "jsdom": "^26.1.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.11",
        "vite": "^4.4.5",
        "vitest": "^3.2.4"
