{
    "name": "english-learning-app",
    "private": true,
    "version": "2.3.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "start": "node server.js",
        "heroku-postbuild": "npm run build",
        "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "migrate": "node migrate.js",
        "migrate:reset": "node migrate.js --reset",
        "server": "node server.js",
        "dev:full": "concurrently \"npm run server\" \"npm run dev\" --names \"API,CLIENT\" --prefix-colors \"blue,green\"",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "deploy": "node dev-deploy.js",
        "deploy:watch": "node dev-deploy.js deploy --monitor",
        "logs": "node dev-deploy.js logs",
        "app:info": "node dev-deploy.js info",
        "quick-deploy": "node dev-deploy.js deploy \"Mise Ã  jour rapide\"",
        "watch:deploy": "node dev-watcher.js",
        "dev:watch": "concurrently \"npm run server\" \"npm run dev\" \"npm run watch:deploy\" --names \"API,CLIENT,WATCHER\" --prefix-colors \"blue,green,magenta\""
    },
    "dependencies": {
        "better-sqlite3": "^11.10.0",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "express": "^4.19.2",
        "lucide-react": "^0.263.1",
        "node-fetch": "^3.3.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sqlite3": "^5.1.7"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@vitejs/plugin-react": "^4.0.3",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "concurrently": "^9.2.0",
        "eslint": "^8.45.0",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "happy-dom": "^17.6.1",
        "jest": "^30.0.4",
        "jsdom": "^26.1.0",
        "vite": "^4.4.5",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}